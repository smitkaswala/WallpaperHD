<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="wallpaper.hdwallpaper.coolwallpaper.hdwallpaper.livewallpaper.ColorFragment">



        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="pressed"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@color/background">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="65dp"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/background"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_dots"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_sun"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_half_brite"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_circul"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_lite"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_lightmode"/>



                </LinearLayout>

            </LinearLayout>



        </soup.neumorphism.NeumorphCardView>

</FrameLayout>